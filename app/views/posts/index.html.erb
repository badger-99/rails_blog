<h1>These are all the posts by <%=@user.name%></h1>

<div>
  <%# Intro card %>
  <div>
    <img src="<%= @user.photo%>"/>
    <h3><%= @user.name%></h3>
    <p>Number of posts: <%= @user.posts_counter%></P>
  </div>

  <%# bio card %>
  <div>
    <p><%= @user.bio%></p>
  </div>

  <%# Posts %>
  <% @posts.each do |post| %>
    <div>
      <h3><a href="/users/<%=@user.id%>/posts/<%=post.id%>"><%= post.title%></a></h3>
      <p><%=post.text%></P>
      <p>Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></p>
      
      <%# Coments %>
      <% post.recent_comments.each do |comment| %>
      <%commentor = @users.find(comment.user_id)%>
        <ul>
          <li><%=commentor.name%>: <%=comment.text%></P>
        </ul>
      <%end%>
    </div>
  <%end%>  
</div>