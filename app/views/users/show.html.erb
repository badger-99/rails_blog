<h1>This is <%=@user.name%>'s bio.</h1>
<div>
  <%# Intro card %>
  <div>
    <img src="<%= @user.photo%>"/>
    <h3><%= @user.name%></h3>
    <p>Number of posts: <%= @user.posts_counter%></P>
  </div>

  <%# bio card %>
  <div>
    <p><%= @user.bio%></p>
  </div>

  <%# Posts %>
  <% @posts.each do |post| %>
<div>
  <h3><a href="/users/<%=@user.id%>/posts/<%=post.id%>"><%= post.title%></a></h3>
  <p><%=post.text%></P>
  <p>Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></p>
</div>
<%end%>

  <button type='button'><a href="/users/<%=@user.id%>/posts">See all posts</a></button>
</div>