<h1>This is <%=@user.name%>'s bio.</h1>
<div>
  <%# Intro card %>
  <%= render partial: 'user', locals: { user: @user } %>

  <%# bio card %>
  <div>
    <h5>Bio</h5>
    <p><%= @user.bio%></p>
  </div>

  <%# Posts %>
  <% @posts.each do |post| %>
<div>
  <h3><a href="/users/<%=@user.id%>/posts/<%=post.id%>"><%= post.title%></a></h3>
  <p><%=post.text%></P>
  <p>Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></p>
</div>
<%end%>

  <button type='button'><a href="/users/<%=@user.id%>/posts">See all posts</a></button>
</div>