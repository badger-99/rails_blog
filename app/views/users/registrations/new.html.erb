<h2>Sign up</h2>
<p class='sign_up_instructions'>Fields marked with a * are required.<p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'registration' }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="registration_field">
    <%= f.label :name do %>
    Name*
  <% end %>
    <br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name' %>
  </div>

  <div class="registration_field">
    <%= f.label :email do %>
      Email*
    <% end %>
    <br />
    <%= f.email_field :email, placeholder: 'Email' %>
  </div>

  <div class="registration_field">
    <%= f.label :password do %>
      Password*
    <% end %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: 'Password' %>
  </div>

  <div class="registration_field">
    <%= f.label :password_confirmation do %>
      Password confirmation*
    <% end %>
    <br />
    <%= f.password_field :password_confirmation, placeholder: 'Repeat Password' %>
  </div>

  <div class="registration_field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, size: '55x8', placeholder: 'Tell people a little about yourself.', autocomplete: "bio"  %>
  </div>

  <div class="registration_button">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
